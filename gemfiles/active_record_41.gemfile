source 'https://rubygems.org'

gem 'railties', '~> 4.1.0'
gem 'activerecord', '~> 4.1.0', require: 'active_record'

platforms :ruby do
  if RUBY_VERSION > "2.1.0"
    gem 'sqlite3'
  else
    gem 'sqlite3', '1.3.8'
    gem 'nokogiri', '~> 1.6.8'
  end
end
platforms :jruby do
  gem 'activerecord-jdbcsqlite3-adapter', '>= 1.3.0'
end
platforms :rbx do
  gem 'rubysl', '~> 2.0'
  gem 'racc'
  gem 'minitest'
  gem 'rubinius-developer_tools'
end

gemspec path: '../'
