source 'https://rubygems.org'

gem 'railties', '>= 3.2.3'
gem 'mongoid', '~> 3.0.0'
gem 'rspec-rails', '~> 2.14.1'
gem 'origin'
gem 'moped'
gem 'activesupport', '~> 3.2.18'
gem 'mime-types', '2.99' if RUBY_VERSION == '1.9.3'

platforms :mri do
  gem 'test-unit' if RUBY_VERSION > "2.1.0"
end

platforms :rbx do
  gem 'rubysl', '~> 2.0'
  gem 'racc'
  gem 'rubysl-test-unit'
  gem 'rubinius-developer_tools'
end

gemspec :path => '../'
