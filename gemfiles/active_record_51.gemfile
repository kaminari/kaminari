source 'https://rubygems.org'

gem 'railties', '~> 5.1.0.beta1'
gem 'activerecord', '~> 5.1.0.beta1', require: 'active_record'
gem 'actionview', '~> 5.1.0.beta1', require: 'action_view'

platforms :ruby do
  gem 'sqlite3'
end
platforms :jruby do
  gem 'activerecord-jdbcsqlite3-adapter', '>= 1.3.0'
end
platforms :rbx do
  gem 'rubysl', '~> 2.0'
  gem 'racc'
  gem 'minitest'
  gem 'rubinius-developer_tools'
end

gemspec path: '../'
