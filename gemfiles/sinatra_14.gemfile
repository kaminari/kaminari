source 'https://rubygems.org'

gem 'activerecord', '~> 3.2.0', :require => 'active_record'
gem 'railties', '~> 3.2.3'
gem 'rspec-rails', '>= 2.0'
gem 'sinatra', '~> 1.4.0'
gem 'tilt', '~> 1.4.0'
gem 'padrino-helpers', :github => "padrino/padrino-framework" #'~> 0.11.3'
gem 'rack-test', '>= 0'
gem 'sinatra-contrib', '~> 1.4.0'

# stick to versions that work under Ruby 1.8 for now
gem 'mime-types', '< 2.0'
gem 'nokogiri', '< 1.6'
gem 'capybara', '< 2.1'
gem 'rubyzip', '< 1'

platforms :ruby, :rbx do
  gem 'sqlite3'
end
platforms :jruby do
  gem 'activerecord-jdbcsqlite3-adapter', '>= 1.3.0'
end
platforms :rbx do
  gem 'rubysl', '~> 2.0'
  gem 'racc'
  gem 'rubysl-test-unit'
  gem 'rubinius-developer_tools'
end

gemspec :path => '../'
